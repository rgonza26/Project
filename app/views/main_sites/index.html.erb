<h1>Listing main_sites</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @main_sites.each do |main_site| %>
      <tr>
        <td><%= link_to 'Show', main_site %></td>
        <td><%= link_to 'Edit', edit_main_site_path(main_site) %></td>
        <td><%= link_to 'Destroy', main_site, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

